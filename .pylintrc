[MASTER]

# based on vscode's default rules as they seem sane
# https://code.visualstudio.com/docs/python/linting#_default-pylint-rules
#
# plus the following: 
#
# line-too-long,unused-wildcard-import,unused-import,unused-argument

disable=all
enable=F,E,unreachable,duplicate-key,unnecessary-semicolon,global-variable-not-assigned,unused-variable,binary-op-exception,bad-format-string,anomalous-backslash-in-string,bad-open-mode,line-too-long,unused-wildcard-import,unused-import,unused-argument

# use pylint defaults for everything else

[FORMAT]

max-line-length=120